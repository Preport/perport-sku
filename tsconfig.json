{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.test.ts"]
}
